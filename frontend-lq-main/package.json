{
  "name": "@lq/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "LingoQuesto Frontend Monorepo",
  "packageManager": "pnpm@10.15.1",
  "type": "module",
  "engines": {
    "node": ">=24.11.1",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --filter=@lq/student-teacher",
    "dev:student-teacher": "turbo run dev --filter=@lq/student-teacher",
    "dev:institutional": "turbo run dev --filter=@lq/institutional",
    "build": "turbo run build --filter=\"./apps/**\"",
    "build:student-teacher": "turbo run build --filter=@lq/student-teacher",
    "build:institutional": "turbo run build --filter=@lq/institutional",
    "test": "turbo run test",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:install-deps": "playwright install-deps",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md}\"",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "graphql:codegen": "dotenv -e .env -- cross-env graphql-codegen --config codegen.yml",
    "graphql:watch": "dotenv -e .env -- cross-env graphql-codegen --config codegen.yml --watch",
    "i18n:validate": "tsx packages/i18n/scripts/validate-translations.ts",
    "i18n:extract": "tsx packages/i18n/scripts/extract-keys.ts",
    "i18n:types": "tsx packages/i18n/scripts/generate-types.ts",
    "i18n:scan": "tsx packages/i18n/scripts/extract-hardcoded.ts",
    "i18n:replace": "tsx packages/i18n/scripts/replace-hardcoded.ts",
    "prepare": "husky",
    "clean": "turbo run clean",
    "clean:install": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.3",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-vue-apollo": "^4.1.2",
    "@iconify-json/solar": "^1.2.5",
    "@nuxt/eslint": "^0.5.7",
    "@nuxt/eslint-config": "^1.11.0",
    "@oxc-parser/binding-linux-x64-gnu": "0.96.0",
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/test-utils": "^2.4.6",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^9.33.0",
    "graphql": "^16.9.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "typescript": "^5.5.3",
    "vite": "^5.4.21",
    "vitest": "^2.1.9",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.2.12"
  },
  "dependencies": {
    "@apollo/client": "^3.14.0",
    "@primevue/forms": "^4.5.2",
    "@types/node": "^20.19.26",
    "@vue/apollo-composable": "^4.2.2",
    "@vueuse/core": "^11.3.0",
    "graphql": "^16.12.0",
    "graphql-ws": "^5.16.2",
    "pinia": "^2.3.1",
    "typescript": "^5.9.3",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "zod": "^4.1.13"
  },
  "pnpm": {
    "overrides": {
      "vue": "^3.5.0"
    }
  }
}
