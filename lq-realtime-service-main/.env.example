# Application
APP_NAME=lq-realtime-service
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8082
WORKERS=1

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15

# System API Key (for global broadcasts and admin operations)
SYSTEM_API_KEY=change-me-system-api-key-min-32-chars

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=100

# WebSocket Configuration
WS_MAX_CONNECTIONS_PER_INSTANCE=10000
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_MAX_SIZE=65536

# Webhook Configuration
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5
WEBHOOK_TIMEOUT=30

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://app.linguoquesto.com
CORS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
HEALTH_CHECK_PATH=/health
